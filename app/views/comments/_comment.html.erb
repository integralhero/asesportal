<div class="comment">
	<p>
	  <strong>Name:</strong>
	  <%= comment.user.name %>
	</p>
	 
	<p>
	  <%= comment.body %>
	</p>
	 
	<p>
		<% if current_user && comment.user.id == current_user.id %>
			<div class="pull-right">
			  <%= link_to 'Destroy Comment', [comment.post, comment],
			               method: :delete,
			               data: { confirm: 'Are you sure?' } %>
			</div>
	    <% end %>
	</p>
</div>